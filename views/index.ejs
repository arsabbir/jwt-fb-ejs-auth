<!-- Facebook Auth Area -->
<div class="fb-auth">
  <div class="auth-wraper">
    <div class="auth-left">
      <img src="./assets/icons/facebook.svg" alt="" />
      <h2>
        Facebook helps you connect and share with the people in your life.
      </h2>

    </div>
    <div class="auth-right">
      <div class="auth-box">
        <% if (message) { %>
          <p style="color: green"><%= message %></p>
          <% } %> <% if (err == "Please active your account" ) { %>
          <p style="color: red">
            <%= err %> or <a href="/resentMail/<%= resentMail %>  ">Resend Mail</a>
          </p>
          <% } else { %>
          <p style="color: red"><%= err %></p>
          <% } %>
        <form action="/login" method="post">
          <div class="auth-form">
            <input name ="email" type="text" placeholder="Email address or phone number" />
          </div>
          <div class="auth-form">
            <input name="password" type="password" placeholder="Password" />
          </div>
          <div class="auth-form">
            <button type="submit">Log In</button>
          </div>
        </form>

        <a href="#">Forgotten password?</a>

        <div class="divider"></div>

        <button class="openModal">Create New Account</button>
      </div>
      <p><a href="#">Create a Page</a> for a celebrity, brand or business.</p>
    </div>
  </div>
</div>

